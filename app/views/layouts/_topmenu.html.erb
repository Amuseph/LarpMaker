
<div class="container-fluid">
<%= link_to image_tag("logo_small.png", id: "navbar-logo", :size => '40x40'), root_path, :class => "navbar-brand" %>
  <div class="navbar-collapse">
    <div class="navbar-nav">
      <div class='nav-item dropdown'>
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">The World</a>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'World Setting', pages_setting_path, class: 'dropdown-item' %>
          <% #=  link_to 'Races', pages_races_path, class: 'dropdown-item' %>
          <%= link_to 'Calendar', pages_calendar_path, class: 'dropdown-item' %>
          <%= link_to 'Mythology', pages_mythology_path, class: 'dropdown-item' %>
          <%= link_to 'The Laws', pages_laws_path, class: 'dropdown-item' %>
          <%= link_to 'Town Positions', pages_townpositions_path, class: 'dropdown-item' %>
        </div>
      </div>
      <div class='nav-item dropdown'>
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">The Game</a>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'Camp', pages_camp_path, class: 'dropdown-item' %>
          <%= link_to 'Rulebook', pages_rulebook_path, class: 'dropdown-item' %>
          <%= link_to 'Register For Events', pages_events_path, class: 'dropdown-item' %>
          <%= link_to 'Join The Community', pages_community_path, class: 'dropdown-item' %>
          <%= link_to 'Help Myth - Earn XP', pages_earnexp_path, class: 'dropdown-item' %>
        </div>
      </div>
    </div>

    <div class="navbar-nav ml-auto align-items-end">
    <div class='nav-item dropdown'>
      <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Help</a>
      <div class="dropdown-menu dropdown-menu-right">
        <%= link_to 'FAQ', pages_faq_path, class: 'dropdown-item' %>
      </div>
    </div>


      <% if user_signed_in? %>
        <div class='nav-item dropdown'>
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Profile</a>
          <div class="dropdown-menu dropdown-menu-right">
            <% if (current_user.characters.count == 0) %>
              <%= link_to 'Create Character', new_character_path, :class => 'dropdown-item' %>
            <% else %>
              <%= link_to "Change Character", "#changeCharacterModal", :class => 'dropdown-item', "data-toggle" => "modal", 'data-target' => '#changeCharacterModal' %>
            <% end %>
            <%= link_to 'XP Log', player_explog_path, :class => 'dropdown-item' %>
            <%= link_to 'My Events', player_events_path, :class => 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'dropdown-item' %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'dropdown-item' %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, :class => "nav-link" %>
      <% end %>
    </div>
  </div>
</div>