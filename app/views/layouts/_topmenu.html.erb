
<div class="container-fluid">
<%= link_to image_tag("logo_small.png", id: "navbar-logo", :size => '40x40'), root_path, :class => "navbar-brand" %>
  <div class="navbar-collapse">
    <div class="navbar-nav">
      <div class='nav-item dropdown'>
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuWorld">The World</a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuWorld">
          <li><%= link_to 'World Setting', pages_setting_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Calendar', pages_calendar_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Mythology', pages_mythology_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'The Laws', pages_laws_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Town Positions', pages_townpositions_path, class: 'dropdown-item' %></li>
        </ul>
      </div>
      <div class='nav-item dropdown'>
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuGame">The Game</a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuGame">
          <li><%= link_to 'Camp', pages_camp_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Rulebook', pages_rulebook_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Register For Events', pages_events_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Join The Community', pages_community_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'Help Myth - Earn XP', pages_earnexp_path, class: 'dropdown-item' %></li>
        </ul>
      </div>
    </div>

    <div class="navbar-nav ml-auto align-items-end">
      <div class='nav-item dropdown'>
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuHelp">Help</a>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuHelp">
          <li><%= link_to 'FAQ', pages_faq_path, class: 'dropdown-item' %></li>
        </ul>
      </div>

      <% if user_signed_in? %>
        <div class='nav-item dropdown'>
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuProfile">Profile</a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuProfile">
            <% if (current_user.characters.count == 0) %>
              <li><%= link_to 'Create Character', new_character_path, :class => 'dropdown-item' %></li>
            <% else %>
              <li><%= link_to "Change Character", "#changeCharacterModal", :class => 'dropdown-item', "data-toggle" => "modal", 'data-target' => '#changeCharacterModal' %></li>
            <% end %>
            <li><%= link_to 'XP Log', player_explog_path, :class => 'dropdown-item' %></li>
            <li><%= link_to 'My Events', player_events_path, :class => 'dropdown-item' %></li>
            <div class="dropdown-divider"></div>
            <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'dropdown-item' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'dropdown-item' %></li>
          </ul>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, :class => "nav-link" %>
      <% end %>
    </div>
  </div>
</div>