<div class="modal-body" id="sendCourierModalBody">
  <%= bootstrap_form_for :courier, url: character_sendprayer_path do |f| %>
    <%= f.collection_select :recipient, Deity.all.where('playeravailable = true'), :name, :name, {hide_label: true }  %>
    <%= f.text_area :message, :required => true, placeholder: 'Message', hide_label: true %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>
 