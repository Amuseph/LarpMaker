<div class="modal fade" id="changeEventCharacterModal" tabindex="-1" role="dialog" aria-labelledby="changeEventCharacterModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeEventCharacterModalLabel">Add Character To Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div> 
      <div class="modal-body">
        <% if !@eventattendance.nil? %>
          <%= bootstrap_form_for :characterattendance, url: player_changeeventcharacter_path do |f| %>
            <%= f.hidden_field :eventattendance_id, value: @eventattendance.id  %>
            <div class="row">
              <div class="col-12">
                <%= f.collection_select :character_id, current_user.characters.where('Status = ?', 'Active'), :id, :name, :selected => session[:character], hide_label: true, class: 'm-auto align-self-center' %>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <img id= 'classtoken' height= '100' width= '100'/>
              </div>
              <div class="col-4">
                <center><span id = 'characterlevel' class = 'display-1'>1</span></center>
              </div>
              <div class="col-4">
                <img id= 'deitytoken' height= '100' width= '100'/>
              </div>
            </div>
            <div class="pt-4">
              <%= f.submit 'Update Attendance Character', class: "btn btn-primary float-left" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>