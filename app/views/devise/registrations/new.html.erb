<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
  
  <div class="card mx-auto">
    <div class="card-body">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :readonly => f.object.persisted? %>
      <%= f.text_field :firstname, autocomplete: "given-name", label: 'First Name' %>
      <%= f.text_field :lastname, autocomplete: "family-name", label: 'Last Name' %>
      <%= f.text_field :aliaslastname, label: 'Alias Last Name' %><i>Populate to Hide Real Last Name</i><br/><br/>
      <%= f.text_field :address, label: 'Address' %>
      <%= f.text_field :address2, label: 'Address - Part2' %>
      <%= f.text_field :city, label: 'City' %>
      <%= f.select :state, ['Alabama' ,'Alaska' ,'Arizona' ,'Arkansas' ,'California' ,'Colorado' ,'Connecticut' ,'Delaware' ,'Florida' ,'Georgia' ,'Hawaii' ,'Idaho' ,'Illinois' ,'Indiana' ,'Iowa' ,'Kansas' ,'Kentucky' ,'Louisiana' ,'Maine' ,'Maryland' ,'Massachusetts' ,'Michigan' ,'Minnesota' ,'Mississippi' ,'Missouri' ,'Montana' ,'Nebraska' ,'Nevada' ,'New Hampshire' ,'New Jersey' ,'New Mexico' ,'New York' ,'North Carolina' ,'North Dakota' ,'Ohio' ,'Oklahoma' ,'Oregon' ,'Pennsylvania' ,'Rhode Island' ,'South Carolina' ,'South Dakota' ,'Tennessee' ,'Texas' ,'Utah' ,'Vermont' ,'Virginia' ,'Washington' ,'West Virginia' ,'Wisconsin' ,'Wyoming'], label: 'State' %>
      <%= f.text_field :zipcode, :maxlength => 5, label: 'Zip Code' %>
      <%= f.text_field :phonenumber, :maxlength => 10, label: 'Phone Number' %><i>Numbers only. No spaces or dashes</i><br/><br/>
  
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      
      <% if Rails.env.production? %>
        <%= flash[:recaptcha_error] %>
        <%= recaptcha_tags %>
      <% end %>
      

      <%= f.submit "Sign Up", class: "btn btn-success" %> <%= link_to "Back", :root, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
