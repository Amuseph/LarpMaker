<div class="modal-body">
  <%= bootstrap_form_with(model: @eventattendance, url: pathurl, local: true) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id  %>
    <%= f.collection_select :user_id, @users, :id, :email, hide_label: true %>
    <%= f.select :registrationtype, ['Player', 'Cast', 'Staff'], hide_label: true  %>

    <div id = 'eventattendance_character'>
    <%= f.grouped_collection_select :character_id, User.order(:email), :characters, :email, :id, :name, :include_blank => true %>
    </div>
    <%= f.collection_select :cabin_id, Cabin.all, :id, :name, {prompt: 'Cabin', :include_blank => true } %>

    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>    
