<%= provide(:title, 'Game Events') %>
<div class="container col-12 mt-4 mb-2" id="eventpage">
  <div class="row">
    <div class="container col-12">
      <%= image_tag("pages/events/event-header.jpg", :class => "img-fluid mx-auto d-block") %>
    </div>
  </div>
  For any questions, please reach out to support@mythlarp.com</b></p>

    <% if (Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'Spring', DateTime.now, Date.today.year).count > 0)  %>
      <div id="seasonheader">
        Spring Season
      </div>
      <% Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'Spring', DateTime.now, Date.today.year).reorder('startdate asc').each do |event|  %>
        <div class="row" id="eventspace">
          <div class="container col-12" id="eventname">
            <%= event.name %>
          </div>
        </div>
        <div class="row">
          <div class="container col-12" id="eventdetails">
            <%= event.description %><br>
            <b>Event Dates:</b> <%= event.startdate.strftime("%m/%d/%Y")  %> - <%= event.enddate.strftime("%m/%d/%Y") %><br>
            <%= get_event_price_details(event) %>
          </div>
        </div>
        <div class="row">
          <div class="container col-6" id="eventplay">
            <%= get_event_player_link(event) %><br>
          </div>
          <div class="container col-6" id="eventcast">
            <%= get_event_cast_link(event) %>
          </div>
        </div>
        <div class="row" id="eventstatus">
          <div class="container col-12" id="eventstatus">
            <%= get_event_status(event) %>
          </div>
        </div>.
      <% end %>
    <% end %>
    
    <% if (Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'Fall', DateTime.now, Date.today.year).count >= 0)  %>
      <div id="seasonheader">
        Fall Season
      </div>
      <% Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'Fall', DateTime.now, Date.today.year).reorder('startdate asc').each do |event|  %>
        <div class="row" id="eventspace">
          <div class="container col-12" id="eventname">
            <%= event.name  %>
          </div>
        </div>
        <div class="row">
          <div class="container col-12" id="eventdetails">
            <%= event.description %><br>
            <b>Event Dates:</b> <%= event.startdate.strftime("%m/%d/%Y")  %> - <%= event.enddate.strftime("%m/%d/%Y") %><br>
            <%= get_event_price_details(event) %>
          </div>
        </div>
        <div class="row">
          <div class="container col-6" id="eventplay">
            <%= get_event_player_link(event) %><br>
          </div>
          <div class="container col-6" id="eventcast">
            <%= get_event_cast_link(event) %>
          </div>
        </div>
        <div class="row" id="eventstatus">
          <div class="container col-12" id="eventstatus">
            <%= get_event_status(event) %>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if (Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'N/A', DateTime.now, Date.today.year).count >= 0)  %>
      <div id="seasonheader">
        Miscellaneous Events
      </div>
      <% Event.all.where('season = ? and startdate > ? and extract(year from startdate) = ?', 'N/A', DateTime.now, Date.today.year).reorder('startdate asc').each do |event|  %>
        <div class="row" id="eventspace">
          <div class="container col-12" id="eventname">
            <%= event.name  %>
          </div>
        </div>
        <div class="row">
          <div class="container col-12" id="eventdetails">
            <%= event.description %><br>
            <b>Event Dates:</b> <%= event.startdate.strftime("%m/%d/%Y")  %> - <%= event.enddate.strftime("%m/%d/%Y") %><br>
            <%= get_event_price_details(event) %>
          </div>
        </div>
        <div class="row">
          <div class="container col-6" id="eventplay">
            <%= get_event_player_link(event) %><br>
          </div>
          <div class="container col-6" id="eventcast">
            <%= get_event_cast_link(event) %>
          </div>
        </div>
        <div class="row" id="eventstatus">
          <div class="container col-12" id="eventstatus">
            <%= get_event_status(event) %>
          </div>
        </div>
      <% end %>
    <% end %>


</div>